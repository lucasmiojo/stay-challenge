{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": { "type": "grafana", "uid": "-- Grafana --" },
        "enable": true,
        "hide": true,
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "timezone": "",
  "title": "Pension API - Loki Logs Dashboard",
  "uid": "pension-api-loki-dashboard",
  "version": 1,
  "schemaVersion": 42,
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Total Logs",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "sum(count_over_time({app=\"pension-api\"}[5m]))",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Error Logs",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "sum(count_over_time({app=\"pension-api\", level=\"error\"}[5m]))",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "type": "logs",
      "title": "Recent Logs",
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 4 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "{app=\"pension-api\"} | json",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Logs Per Second",
      "gridPos": { "h": 6, "w": 24, "x": 0, "y": 16 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "sum(rate({app=\"pension-api\"}[1m]))",
          "refId": "A"
        }
      ]
    },
    {
      "id": 5,
      "type": "table",
      "title": "Logs by Route (URL)",
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 22 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "sum(count_over_time({app=\"pension-api\"} | json | unwrap url [5m])) by (url)",
          "refId": "A"
        }
      ]
    },
    {
      "id": 6,
      "type": "table",
      "title": "Logs by Method",
      "gridPos": { "h": 6, "w": 12, "x": 12, "y": 22 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "sum(count_over_time({app=\"pension-api\"} | json | unwrap method [5m])) by (method)",
          "refId": "A"
        }
      ]
    },
    {
      "id": 7,
      "type": "table",
      "title": "Logs by Status Code",
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 28 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "sum(count_over_time({app=\"pension-api\"} | json | unwrap status [5m])) by (status)",
          "refId": "A"
        }
      ]
    },
    {
      "id": 8,
      "type": "logs",
      "title": "Trace Logs",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 34 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "{traceId=\"$traceId\"} | json",
          "refId": "A"
        }
      ]
    }
  ],
  "templating": {
    "list": [
      {
        "name": "traceId",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki" },
        "query": "label_values({app=\"pension-api\"}, traceId)",
        "refresh": 1,
        "sort": 1
      }
    ]
  },
  "time": { "from": "now-6h", "to": "now" }
}
