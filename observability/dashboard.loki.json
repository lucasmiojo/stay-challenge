{
  "title": "Loki Logs Dashboard",
  "uid": "loki-logs-dashboard",
  "schemaVersion": 36,
  "version": 1,
  "panels": [
    {
      "type": "stat",
      "title": "Total Logs",
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "targets": [
        {
          "expr": "sum(count_over_time({compose_service=~\".*\"}[5m]))"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 6,
        "h": 4
      }
    },
    {
      "type": "stat",
      "title": "Error Logs",
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "targets": [
        {
          "expr": "sum(count_over_time({level=\"error\"}[5m]))"
        }
      ],
      "gridPos": {
        "x": 6,
        "y": 0,
        "w": 6,
        "h": 4
      }
    },
    {
      "type": "logs",
      "title": "Recent Logs",
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "targets": [
        {
          "expr": "{compose_service=~\".*\"}"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 4,
        "w": 24,
        "h": 10
      }
    },
    {
      "type": "timeseries",
      "title": "Logs Per Second",
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "targets": [
        {
          "expr": "sum(rate({compose_service=~\".*\"}[1m]))"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 14,
        "w": 24,
        "h": 8
      }
    }
  ]
}
